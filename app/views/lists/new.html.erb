<%= render "lists/banner" %>

<div class="container">
  <div class="d-flex justify-content-between mt-5">
    <h3>Create a new list</h3>
    <%= link_to "Cancel", lists_path, class: "btn btn-warning"%>
  </div>
  <div class="d-flex flex-wrap">

    <%= simple_form_for(@list) do |l| %>
      <%= l.input :name %>
      <%= l.input :photo, as: :file %>
      <%= l.submit %>
    <% end %>

  </div>
</div>
