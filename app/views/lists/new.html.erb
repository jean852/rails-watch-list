<h1>Lists#new</h1>
<p>Find me in app/views/lists/new.html.erb</p>

<div class="container">
  <div class="d-flex justify-content-between">
    <h3>Create a new list</h3>
    <%= link_to "Cancel", lists_path, class: "btn btn-warning"%>
  </div>
  <div class="d-flex flex-wrap">

    <%= simple_form_for(@list) do |l| %>
      <%= l.input :name %>
      <%= l.submit %>
    <% end %>

  </div>
</div>
