<h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p>

<div class="container">
  <div class="d-flex justify-content-between">
    <h3>My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary"%>
  </div>

  <div class="cards mt-5">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(...)">
          <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
