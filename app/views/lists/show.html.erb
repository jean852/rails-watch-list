<%= render "lists/banner" %>



<div class="container">
  <div class="d-flex justify-content-between mt-5">
    <h3><%= @list.name%></h3>
    <div>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary"%>
    <%= link_to "Back to lists", lists_path, class: "btn btn-primary"%>
    </div>
  </div>
  <div class="d-flex flex-wrap mb-5">
    <% @bookmarks.each do |bookmark| %>
      <div class="card">
        <div class="card-movie-photo" style="background-image: url(<%= bookmark.movie.poster_url %>)">
        </div>
        <div class="card-movie-details p-2 flex-column align-items">
          <div class="d-flex justify-content-between">
            <h4><%= bookmark.movie.title %></h4>
            <%= bookmark.movie.rating %>
          </div>
          <div class="d-flex justify-content-between">
            <%= bookmark.movie.overview %>
          </div>
          <div class="d-flex justify-content-between">
            <%= bookmark.comment.capitalize %>
            <%= link_to "Remove", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %> </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
