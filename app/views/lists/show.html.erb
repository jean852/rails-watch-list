<h1>Lists#show</h1>
<p>Find me in app/views/lists/show.html.erb</p>



<div class="container">
  <div class="d-flex justify-content-between">
    <h3><%= @list.name%></h3>
    <%= link_to "Add a movie", new_list_path, class: "btn btn-primary"%>
    <%= link_to "Back to lists", lists_path, class: "btn btn-primary"%>
  </div>
  <div class="d-flex flex-wrap">
    <% @bookmarks.each do |bookmark| %>
      <div class="card p-5">
        <%= bookmark.comment %> |
        <%= bookmark.movie.title %> |
        <%= bookmark.movie.rating %>
      </div>
    <% end %>
  </div>
</div>
